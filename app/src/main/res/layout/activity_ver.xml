<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/btn_shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.verActivity">

    <LinearLayout
        android:padding="10dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_nombre"
            android:background="@drawable/ed_shape"
            android:drawablePadding="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:hint="@string/hint_nombre"
            android:inputType="textPersonName"
            android:textColor="@color/deep_blue"
            android:textColorHint="@color/deep_blue"
            android:drawableLeft="@drawable/baseline_person_24"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

        <EditText
            android:id="@+id/edit_telefono"
            android:background="@drawable/ed_shape"
            android:drawablePadding="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:paddingLeft="10dp"
            android:hint="@string/hint_telefono"
            android:inputType="number"
            android:textColor="@color/deep_blue"
            android:textColorHint="@color/deep_blue"
            android:drawableLeft="@drawable/baseline_contact_phone_24"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>


        <EditText
            android:id="@+id/edit_correo"
            android:background="@drawable/ed_shape"
            android:drawablePadding="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:paddingLeft="10dp"
            android:hint="@string/hint_correo"
            android:inputType="textEmailAddress"
            android:textColor="@color/deep_blue"
            android:textColorHint="@color/deep_blue"
            android:drawableLeft="@drawable/baseline_email_24"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>





        <Button
            android:id="@+id/btn_guardar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/btn_guarda"
            android:background="@drawable/btn_shape"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
          android:layout_marginTop="30dp"
            android:clickable="true"
            android:layout_marginBottom="20dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>









    </LinearLayout>






</LinearLayout>